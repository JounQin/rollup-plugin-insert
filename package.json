{
  "name": "@rxts/rollup",
  "version": "0.0.0",
  "description": "Incredible Rollup plugins, make Rollup greater",
  "repository": "https://github.com/rx-ts/rollup.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -e named -p",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/lib",
    "lint": "eslint . --cache --ext md,js,ts --max-warnings 10 -f friendly",
    "pretest": "yarn clean",
    "test": "jest",
    "type-coverage": "type-coverage --cache --detail --ignore-catch --ignore-files '**/*.d.ts' --strict"
  },
  "devDependencies": {
    "@1stg/lib-config": "^0.5.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "type-coverage": "^2.4.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "renovate": {
    "extends": "@1stg"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
